{
    "name": "algsupport/yii2-glide",
    "description": "Yii2 Glide Extension",
    "type": "yii2-extension",
    "keywords": ["yii2","extension","glide","thumbnail"],
    "license": "BSD-3-Clause",
    "authors": [
        {
            "name": "Eugene Terentev",
            "email": "eugene@terentev.net"
        }
    ],
    "require": {
        "php" : ">=8.0",
        "yiisoft/yii2": "*",
        "league/glide": "^2.0",
        "league/uri": "^6.0",
        "symfony/http-foundation": "^3.0"
    },
    "require-dev": {
      "phpunit/phpunit": "^6.0"
    },
    "autoload": {
        "psr-4": {
            "algsupport\\glide\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "algsupport\\glide_tests\\": "tests/"
        }
    },
    "repositories": [
        {
            "type": "composer",
            "url": "https://asset-packagist.org"
        }
    ]
}
